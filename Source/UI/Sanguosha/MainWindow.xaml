<Window x:Class="Sanguosha.UI.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:wyDay.Controls;assembly=AutomaticUpdaterWPF" 
        Title="MainWindow" Height="768" Width="1126" MinWidth="1024" MinHeight="580" Loaded="Window_Loaded">
    <Grid>
        <Frame x:Name="MainFrame">
            <Frame.Template>
                <ControlTemplate TargetType="Frame">
                    <ContentPresenter />
                </ControlTemplate>
            </Frame.Template>
        </Frame>
        <my:AutomaticUpdater x:Name="automaticUpdater" Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Height="69" WaitBeforeCheckSecs="1" Foreground="#FF00B8FD" />
    </Grid>
</Window>
