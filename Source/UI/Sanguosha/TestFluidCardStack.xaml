<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:Sanguosha.UI.Controls;assembly=Controls" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" x:Class="Sanguosha.UI.Main.TestFluidCardStack"
        Title="TestFluidCardStack" Height="300" Width="300">
    <Grid>
        <my:FluidCardStack Height="50" HorizontalAlignment="Center" x:Name="fluidCardStack1" VerticalAlignment="Top" CardWidth="50" CardHeight="50">
        	<i:Interaction.Behaviors>
        		<ei:FluidMoveBehavior AppliesTo="Children" Duration="00:00:00.2000000" />
        	</i:Interaction.Behaviors>
            <Border Background="Red" BorderThickness="1" Height="50" x:Name="border1" Width="50" />
            <Border Background="Green" BorderThickness="1" Height="50" x:Name="border2" Width="50" />
            <Border Background="Blue" BorderThickness="1" Height="50" x:Name="border3" Width="50" />
            <Border Background="Yellow" BorderThickness="1" Height="50" x:Name="border4" Width="50" />
            <Border Background="Pink" BorderThickness="1" Height="50" x:Name="border5" Width="50" />
        </my:FluidCardStack>
    </Grid>
</Window>
