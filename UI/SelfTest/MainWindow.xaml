    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
	x:Class="WpfApplication1.MainWindow"
	x:Name="Window"
	Title="MainWindow"
	Width="980" Height="466">
    <Window.Resources>
    </Window.Resources>

	<Grid x:Name="LayoutRoot" Margin="10">
