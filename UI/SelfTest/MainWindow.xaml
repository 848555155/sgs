            <Controls:PlayerInfoView x:Name="playerInfoView" Height="auto" />
            <Controls:MainPlayerInfoView x:Name="mainPlayerInfoView" />
            <Button Content="Update" Height="23" HorizontalAlignment="Left" Margin="0,10,0,0" Name="btnUpdate" VerticalAlignment="Top" Width="150" Click="btnUpdate_Click" />
            <Button Content="Update2" Height="23" HorizontalAlignment="Left" Margin="0,10,0,0" Name="btnUpdate2" VerticalAlignment="Top" Width="150" Click="btnUpdate2_Click" />
        </StackPanel>
